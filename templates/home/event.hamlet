<div #layout-content>
    $if null contents
        <span .no-contents>
            現在このグループにはイベントが存在しません
    $else
        $forall eventLog <- contents
            <div .media>
                $case eventLog
                    $of MessageEventLog groupId person messageId body created
                        <img .media__person-icon src=/static/image/icon/person/#{personIcon person}>
                        <div .media__body>
                            <span .media__body__by>
                                #{personName person}
                            <span .media__body__at>
                                 #{format tz created}
                            <div .media__body__text>
                                <div .event-content>
                                    <img src=/static/image/icon/event/chat_3.png>
                                    <a href=@{MessageListR groupId}#message-#{toIntId messageId}>
                                        #{body}

                    $of ScheduleEventLog groupId person scheduleId day created
                        <img .media__person-icon src=/static/image/icon/person/#{personIcon person}>
                        <div .media__body>
                            <span .media__body__by>
                                #{personName person}
                            <span .media__body__at>
                                 #{format tz created}
                            <div .media__body__text>
                                <div .event-content>
                                    <img src=/static/image/icon/event/schedule.jpg>
                                    <a href=@{ScheduleListR groupId}#schedule-#{toIntId scheduleId}>
                                        #{day}

                    $of AttendanceEventLog groupId person scheduleId day attendanceId presence created
                        <img .media__person-icon src=/static/image/icon/person/#{personIcon person}>
                        <div .media__body>
                            <span .media__body__by>
                                #{personName person}
                            <span .media__body__at>
                                 #{format tz created}
                            <div .media__body__text>
                                <div .event-content>
                                    <img src=/static/image/icon/event/schedule.jpg>
                                    <a href=@{ScheduleListR groupId}#schedule-#{toIntId scheduleId}>
                                        #{day}
                                <div .event-content>
                                    <img src=/static/image/icon/event/balloon.png>
                                    <a href=@{ScheduleDetailR groupId scheduleId}#attendance-#{toIntId attendanceId}>
                                        #{fromInt presence}

                    $of LinkEventLog groupId person linkId title created
                        <img .media__person-icon src=/static/image/icon/person/#{personIcon person}>
                        <div .media__body>
                            <span .media__body__by>
                                #{personName person}
                            <span .media__body__at>
                                 #{format tz created}
                            <div .media__body__text>
                                <div .event-content>
                                    <img src=/static/image/icon/event/link.png>
                                    <a href=@{LinkListR groupId}#link-#{toIntId linkId}>
                                        #{title}

                    $of CommentEventLog groupId person linkId title commentId body created
                        <img .media__person-icon src=/static/image/icon/person/#{personIcon person}>
                        <div .media__body>
                            <span .media__body__by>
                                #{personName person}
                            <span .media__body__at>
                                 #{format tz created}
                            <div .media__body__text>
                                <div .event-content>
                                    <img src=/static/image/icon/event/link.png>
                                    <a href=@{LinkListR groupId}#link-#{toIntId linkId}>
                                        #{title}
                                <div .event-content>
                                    <img src=/static/image/icon/event/balloon.png>
                                    <a href=@{LinkDetailR groupId linkId}#comment-#{toIntId commentId}>
                                        #{body}
